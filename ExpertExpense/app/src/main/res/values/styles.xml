<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ControlsStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay"
           parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ContactLabelTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center_vertical</item>
    </style>

    <style name="ContactTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:textSize">16sp</item>
    </style>






    <public name="CalcDialogStyle" type="style"/>
    <style name="CalcDialogStyle">
        <item name="calcDialogMaxWidth">400dp</item>
        <item name="calcDialogMaxHeight">400dp</item>
        <item name="calcButtonTextClear">@string/calc_dialog_clear</item>
        <item name="calcButtonTextCancel">@string/calc_dialog_cancel</item>
        <item name="calcButtonTextOk">@string/calc_dialog_ok</item>
        <item name="calcButtonTexts">@array/calc_dialog_btn_texts</item>
        <item name="calcBackgroundColor">?attr/colorBackgroundFloating</item>
        <item name="calcHeaderHeight">64dp</item>
        <item name="calcValueStyle">@style/CalcValueStyle</item>
        <item name="calcNumberBtnStyle">@style/CalcNumberBtnStyle</item>
        <item name="calcOperationBtnStyle">@style/CalcOperationBtnStyle</item>
        <item name="calcAnswerBtnStyle">@style/CalcAnswerBtnStyle</item>
        <item name="calcEraseBtnStyle">@style/CalcEraseBtnStyle</item>
        <item name="calcDialogSepColor">@color/colorMainBackground</item>
        <item name="calcDialogButtonStyle">@style/CalcDialogButtonStyle</item>
        <item name="calcErrors">@array/calc_dialog_errors</item>
    </style>

    <public name="CalcValueStyle" type="style"/>
    <style name="CalcValueStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <!--
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1sp</item> -->
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <public name="CalcNumberBtnStyle" type="style"/>
    <style name="CalcNumberBtnStyle">
        <item name="android:background">@null</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textSize">28sp</item>
    </style>

    <public name="CalcOperationBtnStyle" type="style"/>
    <style name="CalcOperationBtnStyle">
        <item name="android:background">@color/colorMainBackground</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <public name="CalcAnswerBtnStyle" type="style"/>
    <style name="CalcAnswerBtnStyle">
        <item name="android:background">@color/colorMainBackground</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <public name="CalcEraseBtnStyle" type="style"/>
    <style name="CalcEraseBtnStyle">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/ic_backspace</item>

    </style>

    <public name="CalcDialogButtonStyle" type="style"/>
    <style name="CalcDialogButtonStyle" parent="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- Nothing -->
    </style>



</resources>
