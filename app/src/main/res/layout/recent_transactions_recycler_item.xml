<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:tag="@string/tag_transaction">

    <ImageView
        android:id="@+id/recentTransactionItemIcon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|start|center_vertical"
        android:layout_weight="15"
        android:adjustViewBounds="true"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_money_sign"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="55"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recentTransactionItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRANSACTION NAME"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/recentTransactionItemDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="14sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/recentTransactionItemAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_weight="30"
        android:layout_marginEnd="4dp"
        android:gravity="end"
        android:text="$2000.00"
        android:textColor="@color/colorValidGreen"
        android:textSize="20sp"/>

</LinearLayout>
