<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:tag="@string/tag_bills_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/upcomingBillsItemIcon"
        android:layout_width="@dimen/icon_regular_size"
        android:layout_height="@dimen/icon_regular_size"
        android:layout_weight="2"
        android:src="@drawable/ic_money_sign"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/upcomingBillsItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BILL NAME"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/upcomingBillsItemDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill Description"
            android:textSize="14sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/upcomingBillsItemAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="$20.00"
        android:textColor="@color/colorErrorRed"
        android:textSize="20sp"/>

</LinearLayout>